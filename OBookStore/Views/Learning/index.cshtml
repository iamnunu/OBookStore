@using X.PagedList.Mvc.Core;
@using X.PagedList; 

<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>

<style>

    .container{
       
        width:100%;
       
    }
    .div_filter{
        left:0;
        height:90vh;
        width:10%;
       
         position:absolute;
    }

    .card{
        width:15%;
        margin-top:10px;
    }

    .div_nuggets{
        position:absolute;
        margin-left:1%;
        width:60%;
    }

    .div_row{
        margin-top:2%;
    }

    .a_active_filter{
        display:none;
   
        color:white;
    }
    .a_filter{
        display:none;
    }

    .card{
        width:20%;
        height:22vh
    }
    .img-thumbnail{
      height: 100%;
      width: 50%;
    }

    .header{
        font-size:12px;
    }
    .foot{
        font-size:12px;
    }
</style>


<div class="container">

    <div class="div_filter">

    @foreach (var item in  ViewBag.Categories) {
   
    <div class="div_filter_section" hidden>
   
            <label class="filter_head" id="">@item</label>
            <br />
            <label class="a_filter"><input type="checkbox" />menu</label>
            
            
            <hr />
        </div>
       
    }

        
        
        

    </div>
    <div class="div_nuggets" >

    <div class="div_row">
     @foreach (var item in  ViewBag.OnePageOfProducts) {
         <a href="/Learning/Books?ID=@item.Id" >

            <div class="card">
                <div class="header">
                    @item.Caption
                </div>
                <div class="body">
                    <img class="img-thumbnail" src="https://www.google.com/images/branding/googlelogo/1x/googlelogo_color_272x92dp.png" />
                </div>
                <div class="foot">
                    <p class="p_card_body">@item.Name</p>
                </div>
            </div>
            

       </a>
       
         }

            </div> 


    </div>
   



</div>


<script>

    $(document).on("click", ".filter_head", function () {
    
        $(this).siblings(".a_filter").toggle();

    });
</script>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager( (IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page }) )